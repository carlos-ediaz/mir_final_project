generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lesson {
  id          String    @id @default(uuid()) @db.Uuid
  subject     String?
  description String?
  createdAt   DateTime  @default(now())
  scheduledAt DateTime?
  site        String?
  // teacher     Teacher  @relation(fields: [teacherId], references: [id])
  // teacherId   String   @db.Uuid
  // student     Student  @relation(fields: [studentId], references: [id])
  // studentId   String   @db.Uuid
  status      String // Scheduled, Finished, Canceled
}

model Teacher {
  id       String  @id @default(uuid()) @db.Uuid
  email    String  @unique
  name     String?
  lastname String?
  age      Int?
  password String?
  type     String?
  // lesson   Lesson[]
}

model Student {
  id       String  @id @default(uuid()) @db.Uuid
  email    String  @unique
  name     String?
  lastname String?
  age      Int?
  password String?
  type     String?
  // lesson   Lesson[]
}

model Subject {
  id          String @id @default(uuid()) @db.Uuid
  subjectname String
}
